doctype html

html
  title= settings.title
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='csrf', content=req.csrfToken())
  meta(name='show-bolt11', content=settings.show_bolt11?1:'')
  meta(name='apple-mobile-web-app-capable', content='yes')
  meta(name="mobile-web-app-capable" content="yes")
  link(rel="shortcut icon" href="pollofeed.png")
  meta(name="application-name" content="pollofeed")
  meta(name="apple-mobile-web-app-title" content="pollofeed")
  meta(name="msapplication-starturl" content="/")
  meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
  link(rel='stylesheet', href='bootswatch/'+ settings.theme +'/bootstrap.min.css')
  link(rel='stylesheet', href="style.css")
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

  body
    include header.pug
    div.container.mb-4(style="font-size: 1.5rem; height: 90vh; min-height: 700px;")
      .row
        button(
          class="btn btn-primary btn-block btn_feed mx-auto mb-4"
          type="submit" data-buy-item="pollofeed"
          )
          i.fa.fa-bolt.font-weight-bold.mr-1
          span.font-weight-bold.text-uppercase feed
